UNAME := $(shell uname)
ifeq ($(UNAME), Linux)
    SHELL := /bin/bash
else ifeq ($(findstring MINGW64, $(UNAME)), MINGW64)
    # on windows building with msys2/mingw64
		SHELL := /bin/bash
endif

# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@

# Prefix-specific substitution variables
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

# VPATH-specific substitution variables
srcdir = @srcdir@
VPATH = @srcdir@

# Terminal colors
RED=`tput setaf 1`
GREEN=`tput setaf 2`
RESET=`tput sgr0`

.PHONY: all clean seedtool check lint
all clean seedtool check lint:
	source set_build_paths.sh && cd src && $(MAKE) $@

.PHONY: install uninstall
install uninstall:
	source set_build_paths.sh && cd src && $(MAKE) $@

config.status: configure
	./config.status --recheck

.PHONY: distclean
distclean:
	cd src && $(MAKE) $@
	rm -f Makefile
	rm -rf autom4te.cache
	rm -f autoscan.log
	rm -f configure.scan configure.status config.log config.status config.h
	for d in deps/*; do \
		if [[ -d "$d" ]]; then \
			pushd $d;		\
			make clean;		\
			popd;			\
		fi;				\
	done
	rm -rf sysroot
